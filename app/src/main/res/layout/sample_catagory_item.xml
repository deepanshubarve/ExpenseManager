<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catrgoryIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/category_bg"
        android:padding="8dp"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/invesment2"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/catrgoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/catrgoryIcon"
        app:layout_constraintStart_toStartOf="@+id/catrgoryIcon"
        app:layout_constraintTop_toBottomOf="@+id/catrgoryIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>